<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F3F8"
    tools:context=".otp_authActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/text_view2"
        android:layout_marginBottom="150dp"
        android:shadowColor="@color/colorPrimary"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:text="Order, Test and Pick the one you loved and return the remaining."
        android:textStyle="bold|italic"
        android:textColor="@android:color/holo_green_light"
        android:textSize="40dp"


        ></TextView>


    <TextView
        android:id="@+id/text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/retuning_button"
        android:layout_marginBottom="50dp"
        android:background="#4B718F"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:text="Thanks for you."
        android:textStyle="bold"
        android:textColor="@android:color/holo_green_light"
        android:textSize="40dp"
        ></TextView>

    <Button
        android:id="@+id/retuning_button"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:text="Main Screen"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"

        android:layout_height="wrap_content"></Button>


</RelativeLayout>